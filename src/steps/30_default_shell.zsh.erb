# Check if Zsh is the default shell
if [[ ${SHELL:t} == zsh ]]; then
  print -P '<%= okay %>Zsh is your default shell.'
else
  readonly ZPATH==zsh
  if command chsh -s ${ZPATH}; then
    print -PR "<%= okay %>Changed your default shell to %B${ZPATH}%b"
  else
    print -u2 -PR "%F{yellow}<%= warn %>Could not change your default shell to %B${ZPATH}%b. Please manually change it later.%f"
  fi
fi
