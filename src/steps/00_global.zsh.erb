_replace_home() {
  local abs_path=${1:A}
  local suffix=${abs_path#${<%= home %>:A}}
  if [[ ${abs_path} != ${suffix} ]]; then
    print '<%= home %>'${suffix}
  else
    print ${1}
  fi
}

